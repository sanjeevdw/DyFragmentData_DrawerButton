<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/master_category_grid_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingEnd="8dp"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/gridImageView"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"
        tools:text="Grid List Image"
        />
    <LinearLayout
        android:id="@+id/master_category_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/gridTextViewId"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textAlignment="center"
        tools:text="Grid List Id" />
    <TextView
        android:id="@+id/gridTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:textSize="12sp"
        android:textAlignment="center"
        tools:text="Grid List Text" />
    </LinearLayout>
    <Button
        android:id="@+id/view_products_button"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:text="@string/view_products"
        android:textSize="10sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:background="@drawable/submit_button"
        android:textColor="#ffffff"
        />
</LinearLayout>
