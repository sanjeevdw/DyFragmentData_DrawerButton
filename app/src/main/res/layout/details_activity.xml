<?xml version="1.0" encoding="utf-8"?>
<!-- Use DrawerLayout as root container for activity-->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetailsActivity">

    <!-- Layout to contain contents of main body of screen (drawer will slide over this)-->
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:elevation="4dp"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="vertical">
<LinearLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:focusableInTouchMode="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="280dp"
            android:layout_height="250dp"
            android:layout_marginTop="70dp"
            />
        <ImageView
            android:id="@+id/product_favorite"
            android:layout_alignRight="@+id/main_image"
            android:layout_alignTop="@+id/main_image"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/favorite_icon" />
    </RelativeLayout>
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView_Image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:id="@+id/thumbnail_image_container"
        android:layout_height="wrap_content">
    </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
android:id="@+id/text_container"
android:layout_width="match_parent"
android:layout_marginStart="16dp"
android:layout_height="wrap_content"
android:orientation="vertical">
<TextView
    android:id="@+id/product_name_view"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:textAppearance="?android:textAppearanceMedium"
    android:textColor="#424242"
    android:gravity="bottom"
    android:textSize="16sp"
    android:textStyle="bold"
    android:fontFamily="sans-serif"
    android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/ratings_count"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#919090"
            android:layout_marginTop="6dp"
            android:layout_marginStart="2dp"
            android:textSize="10sp"
            android:gravity="top"
            android:text="@string/rating_count"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/product_rating"
                android:layout_width="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/stars_rating"
                android:background="@android:color/white"
                android:layout_height="wrap_content"/>
        </LinearLayout>
<TextView
    android:id="@+id/product_price_view"
    android:layout_width="match_parent"
    android:textAppearance="?android:textAppearanceMedium"
    android:textColor="#0b0b0b"
    android:layout_marginTop="5dp"
    android:textSize="20sp"
    android:gravity="top"
    android:textStyle="bold"
    android:fontFamily="sans-serif"
    android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/quantity_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <TextView
            android:id="@+id/quantity_id"
            android:layout_marginStart="2dp"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            android:text="@string/quantity_text"
            tools:text="quantity_id"/>
        <EditText
            android:id="@+id/quantity_et"
            android:layout_marginStart="3dp"
            android:layout_width="40dp"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:textSize="16sp"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"
            tools:text="quantity_et"/>
    </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/sku"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />
        </RelativeLayout>

</LinearLayout>
    <RelativeLayout
        android:id="@+id/button_size_container"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/add_to_cart_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rectangle_shape"
            android:text="@string/add_to_cart"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/attribute_label_text_view"
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#424242"
        android:gravity="bottom"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"/>
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView_Color"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/text_color_container_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/attribute_value_text_view"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="5sp"
            android:fontFamily="sans-serif"
            android:clickable="true"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    </HorizontalScrollView>
    <TextView
        android:id="@+id/attribute_size_label_text_view"
        android:layout_width="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#424242"
        android:gravity="bottom"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"/>
    <HorizontalScrollView
        android:id="@+id/horizontalScrollView_Size"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:id="@+id/text_size_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/attribute_size_value_text_view"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:clickable="true"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/product_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="vertical">
        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/description_heading"
            android:layout_height="wrap_content"/>
        <View
            android:id="@+id/line_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="#ddd" />+
        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#202020"
            android:layout_marginTop="6dp"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:layout_marginEnd="8dp"
            android:gravity="top"
            android:text="@string/description_details"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
            <TextView
                android:id="@+id/spec_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="@string/specification_heading"
                />
            <TextView
                android:id="@+id/spec_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_column="2"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="@string/specification_value"
                />
        </TableRow>
    </TableLayout>
        <View
            android:id="@+id/line_separator_one"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:background="#ddd" />
        <ListView
            android:id="@+id/spec_list"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

    <LinearLayout
        android:id="@+id/reviews_rating_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rectangle_shape"
        android:orientation="vertical">
        <TextView
            android:id="@+id/ratings_reviews_text"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/ratings_reviews_text"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/reviews_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan_background"
        android:orientation="horizontal">
        <ImageView
        android:id="@+id/image_reviews"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/t_shirt"
        android:background="@drawable/circle_shape"
        />
    <LinearLayout
        android:id="@+id/reviews_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_user"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:gravity="bottom"
            android:textSize="13sp"
            android:text="@string/reviewer_name"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/rating_user"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:gravity="bottom"
            android:textSize="11sp"
            android:text="@string/review_text"
            android:fontFamily="sans-serif"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/image_rating_two"
            android:layout_width="wrap_content"
            android:src="@drawable/stars_rating"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_separator_review"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#eaeaea" />
    <LinearLayout
        android:id="@+id/reviews_container_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan_background"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_reviews_two"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/t_shirt"
            android:background="@drawable/circle_shape"
            />
        <LinearLayout
            android:id="@+id/reviews_text_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_user_two"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#424242"
                android:gravity="bottom"
                android:textSize="13sp"
                android:text="@string/reviewer_name"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rating_user_two"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#424242"
                android:gravity="bottom"
                android:textSize="11sp"
                android:text="@string/review_text"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image_rating_three"
                android:layout_width="wrap_content"
                android:src="@drawable/stars_rating"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_separator_review_two"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#eaeaea" />
    <LinearLayout
        android:id="@+id/reviews_container_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tan_background"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/image_reviews_three"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/t_shirt"
            android:background="@drawable/circle_shape"
            />
        <LinearLayout
            android:id="@+id/reviews_text_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name_user_three"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#424242"
                android:gravity="bottom"
                android:textSize="13sp"
                android:text="@string/reviewer_name"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/rating_user_three"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#424242"
                android:gravity="bottom"
                android:textSize="11sp"
                android:text="@string/review_text"
                android:fontFamily="sans-serif"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/image_rating_four"
                android:layout_width="wrap_content"
                android:src="@drawable/stars_rating"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/line_separator_review_three"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#eaeaea" />
    <RelativeLayout
        android:id="@+id/related_products_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rectangle_shape"
        >
        <TextView
            android:id="@+id/related_product_heading"
            android:layout_width="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="#424242"
            android:gravity="bottom"
            android:textStyle="bold"
            android:layout_marginTop="9dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:textSize="14sp"
            android:fontFamily="sans-serif"
            android:text="@string/related_products_heading"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="300dp"/>

</LinearLayout>
</android.support.v4.widget.NestedScrollView>
    </FrameLayout>

    <!-- Container for contents of drawer - use NavigationView to make configuration easier-->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/header_layout"/>
</android.support.v4.widget.DrawerLayout>
